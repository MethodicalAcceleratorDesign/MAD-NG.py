local MADToPyPipe = nil
local is_string in MAD.typeid
local assert = assert

local function openPipeToPython(pipeName)
    MADToPyPipe = assert(io.open(pipeName, "w"))
    MADToPyPipe:setvbuf("no")
end

local function send(string)
    assert(is_string(string), "expected string")
    MADToPyPipe:write(string .. "\n")
end

return{ 
    openPipeToPython = openPipeToPython,
    send = send,
}
